<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="5dp">
                <ImageView
                    android:id="@+id/tripImage"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_logo"
                    android:gravity="top"
                    />
                <TextView
                    android:id="@+id/tripTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip name"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_route"/>
                <TextView
                    android:id="@+id/startLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="startpoint aaaaaaaaaaaaaaaaa"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorAccent"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_route"/>
                    <TextView
                        android:id="@+id/endLoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="endpoint"
                        android:textSize="16sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_alarm_clock_mini"
                        />
                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/0000 "
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:layout_marginStart="3dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    />

                </LinearLayout>

            </LinearLayout>
            <!--&#8942;-->
            <TextView
                android:id="@+id/popupMenuId"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="&#8942;"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:textSize="40sp"
                android:textStyle="bold"
                android:padding="10dp"
                />
        </LinearLayout>

</RelativeLayout>
    </android.support.v7.widget.CardView>


